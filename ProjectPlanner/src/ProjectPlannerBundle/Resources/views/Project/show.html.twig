{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Membersid</th>
                <td>{{ entity.membersId }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ entity.deadline|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Commentsid</th>
                <td>{{ entity.commentsId }}</td>
            </tr>
            <tr>
                <th>Bugid</th>
                <td>{{ entity.bugId }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('project') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('project_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
