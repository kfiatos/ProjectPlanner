{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Issue list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Started</th>
                <th>Resolvedat</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
            <tr>
                <td><a href="{{ path('issue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ issue.name }}</td>
                <td>{{ issue.description }}</td>
                <td>{% if issue.started %}{{ issue.started|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if issue.resolvedAt %}{{ issue.resolvedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ issue.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('issue_show', { 'id': issue.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('issue_edit', { 'id': issue.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('issue_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
