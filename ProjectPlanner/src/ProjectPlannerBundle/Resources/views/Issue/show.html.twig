{% extends '::base.html.twig' %}

{% block main -%}
    <h1>Issue</h1>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Started</th>
                <td>{{ entity.started|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Resolvedat</th>
                <td>{{ entity.resolvedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>
    <ul class="record_actions">
        <li>
            {% set issue_id = entity.id  %}
            <a href="{{ path('comment_new', {'issue_id': entity.id }) }}">Nowy komentarz</a>
        </li>
        <li>
            <a href="{{ path('project_show', {'id': entity.project.getId() }) }}">
                Powr√≥t do projektu
            </a>
        </li>
        <li>
            <a href="{{ path('issue_edit', { 'id': entity.id }) }}">Edit</a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
